# ============================================
# CONFIGURACIÓN DOCKER - UBApp
# ============================================
# Copia este archivo a .env y ajusta los valores según tu entorno

# ============================================
# BASE DE DATOS POSTGRESQL
# ============================================
DB_NAME=UBAppDB
DB_USER=postgres
DB_PASSWORD=admin
DB_PORT=5432
DATABASE_URL=postgresql://postgres:admin@postgres:5432/UBAppDB

# ============================================
# REDIS (CACHE Y SESIONES)
# ============================================
REDIS_URL=redis://:redis_password@redis:6379/0
REDIS_PASSWORD=redis_password
REDIS_PORT=6379

# ============================================
# DJANGO BACKEND
# ============================================
DEBUG=False
SECRET_KEY=tu-clave-secreta-super-segura-aqui-cambiala-en-produccion
ALLOWED_HOSTS=localhost,127.0.0.1,backend,tu-dominio.com
BACKEND_PORT=8000

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:4200,http://frontend:4200,https://tu-dominio.com
CSRF_TRUSTED_ORIGINS=http://localhost:4200,http://frontend:4200,https://tu-dominio.com

# ============================================
# FRONTEND ANGULAR
# ============================================
FRONTEND_PORT=4200
API_URL=http://backend:8000
NODE_ENV=production

# ============================================
# NGINX (Opcional - para producción)
# ============================================
NGINX_PORT=80
NGINX_HTTPS_PORT=443

# ============================================
# OPENAI (Para búsqueda semántica)
# ============================================
OPENAI_API_KEY=tu-api-key-de-openai
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_EMBEDDING_DIMENSIONS=1536

# ============================================
# EMAIL (Opcional)
# ============================================
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=tu-email@gmail.com
# EMAIL_HOST_PASSWORD=tu-password
# DEFAULT_FROM_EMAIL=noreply@ubapp.com

# ============================================
# CACHE (Opcional - para producción)
# ============================================
SEMANTIC_CACHE_TIMEOUT=3600
EMBEDDING_CACHE_TIMEOUT=604800
